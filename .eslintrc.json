{
  "env": {
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "packages/*/lib/",
    "packages/*/dist/"
  ],
  "plugins": [
    "unicorn"
  ],
  "extends": [
    "eslint:all",
    "plugin:unicorn/all",
    "prettier"
  ],
  "overrides": [],
  "rules": {
    // https://github.com/prettier/eslint-config-prettier#special-rules
    "arrow-body-style": "error",
    "prefer-arrow-callback": "error",
    "lines-around-comment": "error",
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": false
      }
    ],
    "no-tabs": "error",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": false
      }
    ],
    "no-restricted-syntax": [
      "error",
      "SequenceExpression"
    ],
    // My changes
    "multiline-comment-style": [
      "error",
      "separate-lines"
    ],
    "capitalized-comments": "off",
    "no-console": "off",
    "sort-keys": "off"
  }
}
